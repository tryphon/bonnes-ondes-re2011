<div id="footer">
  <div id="podcast">
    <a href="{{show.url_for_podcast}}" onclick="if (navigator.userAgent.match(/android/i)) { return true; } ; location.href = '{{show.itpc_url_for_podcast}}'; return false;">
      <img class="podcast" src="{{theme.url_for_assets}}/images/podcast.png"/>
    </a>
    <p class="first">
      Adresse du podcast : <input class="podcast" size="{{show.url_for_podcast | size}}" value="{{show.url_for_podcast}}" type="text" readonly="true"/> {{show.clippy_for_podcast}}
    </p>
    
    <p>
      <a href="http://subscribe.getmiro.com/?url1={{show.url_for_podcast}}&trackback1={{show.url_for}}&section1=audio" title="Ajouter ce podcast dans votre Miro">Miro</a> | <a href="{{show.itpc_url_for_podcast}}" title="Ajouter ce podcast dans votre iTunes">iTunes</a> | <a href="{{show.url_for_podcast}}" title="Voir le feed RSS">RSS</a> | <a href="http://wiki.tryphon.org/comment_lire_un_podcast" title="Comment lire un podcast ?">Aide</a>
    </p>
  </div>

  <div id="twitter">
    <a href="http://twitter.com/radioesperanzah" title="@radioesperanzah sur Twitter">
      <img src="{{theme.url_for_assets}}/images/twitter.png"/>
    </a>
  </div>

  <div id="facebook">
    <a href="http://www.facebook.com/RadioEsperanzah" title="Radio Esperanzah! sur FaceBook">
      <img src="{{theme.url_for_assets}}/images/facebook.png"/>
